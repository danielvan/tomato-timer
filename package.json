{
  "name": "optimitimer",
  "version": "1.0.0",
  "description": "Task management and Pomodoro timer with cloud sync",
  "main": "index.html",
  "scripts": {
    "dev": "npx http-server -p 3000 -c-1",
    "build": "echo 'Build not needed for static site'",
    "supabase:start": "npx supabase start",
    "supabase:stop": "npx supabase stop",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ui": "jest --verbose --detectOpenHandles",
    "test:e2e": "playwright test",
    "test:setup": "node test/setup.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "supabase": "^1.100.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/dom": "^9.3.3",
    "@playwright/test": "^1.40.0",
    "jsdom": "^23.0.1"
  },
  "keywords": ["pomodoro", "task-management", "productivity"],
  "author": "Your Name",
  "license": "MIT",
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/test/setup.js"],
    "testMatch": ["**/test/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "*.js",
      "!test/**/*",
      "!node_modules/**/*"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}